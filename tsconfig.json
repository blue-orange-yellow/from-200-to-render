{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./static/js/dist",
    "rootDir": "./static/js",
    "sourceMap": true
  },
  "include": ["static/js/*.ts"],
  "exclude": ["node_modules"]
} 